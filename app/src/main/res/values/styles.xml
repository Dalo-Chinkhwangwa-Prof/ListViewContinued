<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HotelHeader">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/notosans_bold</item>
        <item name="android:textColor">@color/app_color</item>
    </style>

    <style name="HotelButton">
        <item name="android:fontFamily">@font/notosans_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="HotelEditText">
        <item name="android:backgroundTint">@color/app_color</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:textColor">@color/app_color</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:tint">@color/app_color</item>
    </style>

</resources>
